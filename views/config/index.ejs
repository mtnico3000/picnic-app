<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header">
        <h2>Configuration</h2>
      </div>
      <div class="card-body">
        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
          <div class="alert alert-danger">
            <%= errorMessage %>
          </div>
        <% } %>
        
        <% if (!dbConnected) { %>
          <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle-fill"></i> Running in demo mode. Changes will not be saved.
          </div>
        <% } %>
        
        <form action="/config" method="POST">
          <div class="mb-3 row">
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-8">
              <input type="text" class="form-control" id="name" name="name" 
                     value="<%= config.name %>" placeholder="Picnic Guru" required>
            </div>
            <div class="col-sm-2">
              <button type="submit" class="btn btn-primary w-100">Update</button>
            </div>
          </div>
          
          <div class="mb-3 row">
            <label for="password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-8">
              <input type="text" class="form-control" id="password" name="password" 
                     value="<%= config.password %>" placeholder="passw0rd" required>
            </div>
            <div class="col-sm-2">
              <button type="submit" class="btn btn-primary w-100">Update</button>
            </div>
          </div>
        </form>
        
        <div class="mt-4">
          <p class="text-muted">
            <small>Last updated: <%= config.updatedAt ? new Date(config.updatedAt).toLocaleString() : 'Never' %></small>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
